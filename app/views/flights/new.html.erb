<div class="mx-auto max-w-3xl px-4 py-8 sm:px-6 lg:px-8">
  <div class="flex flex-col gap-4 sm:flex-row sm:items-start sm:justify-between">
    <div>
      <h1 class="text-2xl font-semibold tracking-tight text-slate-900">Log a Flight</h1>
    </div>

    <div class="flex items-center gap-3">
      <%= link_to "Back",
            flights_path,
            class: "inline-flex items-center rounded-full bg-white px-4 py-2 text-sm font-medium text-slate-700 ring-1 ring-inset ring-slate-300 hover:bg-slate-50 hover:text-slate-900 transition" %>
    </div>
  </div>

  <div class="mt-8 overflow-hidden rounded-xl bg-white shadow ring-1 ring-black/5">
    <div class="px-5 py-6 sm:px-6">
      <%= render "form", flight: @flight %>
    </div>
  </div>
</div>